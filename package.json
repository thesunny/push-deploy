{
  "name": "@thesunny/push-deploy",
  "version": "0.1.10",
  "description": "Safely push deploy to Heroku, Vercel and others",
  "source": "src/index.ts",
  "main": "./.dist/index.js",
  "module": "./.dist/index.module.js",
  "unpkg": "./.dist/index.umd.js",
  "exports": {
    "types": "./.dist/index.d.ts",
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "types": "./.dist/index.d.ts",
  "author": "Sunny Hirai",
  "license": "MIT",
  "files": [
    ".dist/*"
  ],
  "bin": {
    "push-deploy": "./.dist/index.js"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/debug": "^4.1.5",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.22",
    "microbundle": "^0.15.1",
    "rollup": "^2.59.0",
    "rollup-plugin-sizes": "^1.0.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "scripts": {
    "tsc": "tsc",
    "#build": "#rm -rf ./.dist/ && rollup --config rollup.config.js",
    "build:npm": "rm -rf ./.dist/ && microbundle --compress=false",
    "publish:npm": "yarn build:npm && yarn publish || echo 'type \"npm publish --access=public\" for first publish'",
    "-- dev": "# Run the script directly from the src files",
    "dev": "ts-node --project tsconfig.json ./src/index.ts",
    "production": "node .dist/index.js",
    "-- update": "# Update this CLI starter kit",
    "update:kit": "git pull git@github.com:thesunny/cli-starter-kit.git",
    "-- push deploy": "# Update this CLI starter kit",
    "deploy:production": "node .dist/index.js main production",
    "deploy:stage": "node .dist/index.js main stage"
  }
}
